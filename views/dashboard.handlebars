<section>
  <h2>Create New Vacation</h2>

  <form class="new-vacay-form">
    <div>
      <label for="vacay-title">Title</label>
      <input type="text" id="vacay-title" name="vacay-title" />
            <label for="vacay-start">Start</label>
      <input type="date" id="vacay-start" name="vacay-start" />
            <label for="vacay-end">End</label>
      <input type="date" id="vacay-end" name="vacay-end" />
            <label for="vacay-destination">Destination</label>
      <input type="text" id="vacay-destination" name="vacay-destination" />
    </div>

    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if vacays.length}}
<section>
  <h2>Your Vacations</h2>
  <ol>
    {{#each vacays as |vacay|}}
    <li>
      {{> vacay-info vacay}}
      <a href="/dashboard/edit/{{vacay.id}}" class="edit-link">Edit Vacation</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-vacay.js"></script>