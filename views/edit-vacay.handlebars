{{!-- might combine with single vacay  --}}
<article>
<button class="cal-view nav-v-btn">Calendar</button>
<button class="packing-list nav-v-btn">Packing List</button>
  <h2 class="animate__animated animate__bounce">
    {{vacay.title}}
  </h2>
  <form class="edit-vacay-form">
    <div>
      <input name="vacay-title" type="text" value="{{vacay.title}}" />
    </div>
<div>
        Destination: 
        <input name="vacay-destination" type="text" value="{{vacay.destination}}" />
        </div>
        <div>        <input name="vacay-start" type="date" value="{{vacay.start_date}}" /> to <input name="vacay-end" type="date" value="{{vacay.end_date}}" /> </div>
    <button type="submit">Save vacay</button>
    <button type="button" class="delete-vacay-btn">Delete vacay</button>
  </form>
</article>

<form class="agenda-form">
  <div>Add New Event:</div>
    <div>

      <input name="agenda-title1" type="text"
       value="{{title}}" 
       />
        <input id="2" name="agenda-date1" type="date"
       value="{{display_date}}"/> 
       : 
       <input name="agenda-start1" type="time"
       value="{{start_time}}"/> 
       to 
       <input name="agenda-end1" type="time"
       value="{{end_time}}"/>
    <label for="agenda-location1">Location</label>
    <input name="agenda-location1" type="text" value="{{location}}" />
    <label for="agenda-notes1">notes</label>

    <input name="agenda-notes1" type="text" value="{{agenda_notes}}" />

    </div>
      {{!-- ^add in dates and other info  --}}
    <button id="save-event-btn" type="submit">Save event</button>
  </form>
</article>

<article class="agenda-list">

{{#if vacay.agendaItems.length}}
<section>
  <h2>Agenda</h2>
  <div>
    {{#each vacay.agendaItems as | agendaItem |}}
    <div>
      {{> agenda-item-info agendaItem}}
    </div>
    {{/each}}
  </div>
</section>
{{else}}
<div>No Events Planned</div>
{{/if}}




<script src="/javascript/edit-vacay.js"></script>
<script src="/javascript/delete-vacay.js"></script>
<script src="/javascript/add-agenda-item.js"></script>
    <script src="/javascript/calendar.js"></script>

{{#if vacay.agendaItems.length}}
<script src="/javascript/edit-agenda-item.js"></script>
<script src="/javascript/delete-agenda-item.js"></script>
{{/if}}