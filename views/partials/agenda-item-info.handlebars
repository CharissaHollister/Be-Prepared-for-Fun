<form class="agenda-edit-form">
  <div>
    <input name="agenda-title" type="text" value="{{agenda_title}}" />
    <input name="agenda-date" type="date" value="{{agenda_date}}" />
    :
    <input name="agenda-start" type="time" value="{{agenda_start}}" />
    to
    <input name="agenda-end" type="time" value="{{agenda_end}}" />
    <input name="agenda-location" type="text" value="{{location}}" />
    <input name="agenda-notes" type="text" value="{{agenda_notes}}" />
  </div>
  {{! ^afix dates and time format  }}
  <button id={{id}} class="update-agenda-btn" type="submit">Edit</button>
  {{! edit button isn't working  }}
  <button type="button" id={{id}} class="delete-agenda-btn">Delete</button>
</form>