<article class="vacay">
  <div class="title">
    <a>{{title}}</a>
    <span>({{format_url post_url}})</span>
  </div>
  <div class="meta">
    by
    {{user.username}}
    on
    {{format_date created_at}}
    |
    {{!-- update to info we want displayed for each vacation  --}}
    <a href="/post/{{id}}">{{comments.length}}
      {{format_plural "comment" comments.length}}</a>
  </div>
</article>