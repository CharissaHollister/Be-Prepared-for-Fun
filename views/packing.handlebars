{{#if vacay.packingItems.length}}
<section class="listed-items">
  <h2>Packing List:</h2>
  {{!-- for each packing item go through and add a partial packing-item.handlebar line to the list  --}}
  <ul style="list-style-type:none">
    {{#each vacay.packingItems as | packingItem |}}
    <li>
      {{> packing-item packingItem}}
    </li>
    {{/each}}
  </ul>
</section>
{{else}}
<div>No Packing List Created Yet</div>
{{/if}}
